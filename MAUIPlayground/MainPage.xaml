<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiPlayground="clr-namespace:MAUIPlayground"
             x:DataType="mauiPlayground:MainPageViewModel"
             x:Class="MAUIPlayground.MainPage">

    <ContentPage.Content>
        <ContentView>
            <ContentView.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Green" Offset="0"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </ContentView.Background>
            <Button Text="Go To Second Page" Command="{Binding ClickCommand}" VerticalOptions="Center" HorizontalOptions="Center" />
        </ContentView>
    </ContentPage.Content>
</ContentPage>